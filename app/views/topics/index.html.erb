
        <div class="main"><h1>Welcome to Research.com！！</h1></div>
            <h1>記事一覧</h1>
        <section class="top">
                <ul class=topics>
                    <% @topics.each do |topic| %>
                    <li class="topic"><%= link_to topic.title, topic_path(topic)%></li>
                    <% end %>
                </ul>
                <ul class="lists">
                    <li class="list"><%= link_to '新規投稿作成', new_topic_path%></li>
                    <li class="list"><%= link_to '新規登録', "/signup" ,class: "alist"%> / <%= link_to 'ログイン', "/login"%></li>
                    <li class="list"><%= link_to '自分が投稿した記事を確認する', "/mytopics"%> </li>
                </ul>
        </section>
        <h1>記事を検索する</h1>
            <%= form_with url: topics_search_path, method: :get, class: "search", local: true do |f| %>
                <%= f.text_field :keyword, value: @keyword,class: "searchForm"%>
                <%= f.submit "検索", class: "searchBtn" %>
            <% end %>
<footer>
   <p class="contactForm"><a href="/" class="link">お問い合わせフォームはこちら</a></p>
</footer>
